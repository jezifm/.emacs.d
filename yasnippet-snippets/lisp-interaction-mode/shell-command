# -*- mode: snippet -*-
# name: shell-command
# key: sc
# --
(progn
  (defun jez-shell-command ()
    (interactive)
    (if (buffer-file-name)
      (save-buffer))
    (with-current-buffer "${1:`(or (jez/guess-shell-buffer-name) "sh-imfree")`}"
      (erase-buffer)
      (insert "${2:make test}")
      (comint-send-input)))
  (global-set-key (kbd "C-r") 'jez-shell-command))
$0
