# -*- mode: snippet -*-
# name: list
# key: list
# --
select
    pid,
    usename,
    state,
    pg_blocking_pids(pid) as blocking_pid,
    round((EXTRACT(EPOCH FROM current_timestamp - query_start)/60)::numeric,1) as duration_min,
    left(query, 50) query
from
    pg_stat_activity
where
    state in ('active', 'idle', 'idle in transaction')
order by
    5 desc
;
